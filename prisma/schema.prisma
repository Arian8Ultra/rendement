// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String?
  password String
}

model Mail {
  id        String   @id @default(cuid())
  subject   String
  body      String
  createdAt DateTime @default(now())
  userEmail String
  userPhone String?
}
